<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserProfile">




    <ImageView
        android:id="@+id/imageView"
        android:layout_width="188dp"
        android:layout_height="145dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="28dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/user" />

    <TextView
        android:id="@+id/textName"
        android:layout_width="313dp"
        android:layout_height="42dp"
        android:layout_marginStart="48dp"
        android:layout_marginTop="8dp"
        android:hint="Suharto Das"
        android:textAlignment="center"
        android:textSize="30dp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView" />

    <TextView
        android:id="@+id/textShowMobile"
        android:layout_width="315dp"
        android:layout_height="27dp"
        android:layout_marginStart="48dp"
        android:hint="01675977369"
        android:textSize="20dp"
        android:textAlignment="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textName" />

    <TextView
        android:id="@+id/textview22"
        android:layout_width="102dp"
        android:layout_height="27dp"
        android:layout_marginStart="100dp"
        android:layout_marginTop="8dp"
        android:hint="Patient ID :"
        android:textSize="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textShowMobile" />

    <TextView
        android:id="@+id/textPID"
        android:layout_width="151dp"
        android:layout_height="33dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:hint="PID-1980"
        android:textSize="20dp"
        app:layout_constraintStart_toEndOf="@+id/textview22"
        app:layout_constraintTop_toBottomOf="@+id/textShowMobile" />


    <ImageButton
        android:id="@+id/editButton"
        android:clickable="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="368dp"
        android:layout_marginTop="188dp"
        android:background="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/edit" />


    <RelativeLayout
        android:id="@+id/relativeLayout"
        android:layout_width="393dp"
        android:layout_height="429dp"
        android:layout_marginStart="58dp"
        android:layout_marginTop="300dp"
        android:layout_marginEnd="58dp"
        android:background="@color/Gray"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="20dp"
            android:text="Gender"
            android:textSize="19dp" />

        <TextView
            android:id="@+id/textGender"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="22dp"
            android:layout_marginTop="54dp"
            android:background="@color/white"
            android:hint="Male"
            android:textColor="@color/colorPrimaryDark2"
            android:textSize="21dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView23"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="105dp"
            android:text="Emargency Number-1"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textEmargencyNumber_1"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textGender"
            android:layout_alignParentStart="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="44dp"
            android:background="@color/white"
            android:hint="0177318833"
            android:textColor="@color/colorPrimaryDark2"
            android:textSize="21dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView24"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="29dp"
            android:layout_marginTop="189dp"
            android:text="Emargency Number-2"
            android:textSize="18dp" />


        <TextView
            android:id="@+id/textEmargencyNumber_2"
            android:layout_width="350dp"
            android:layout_height="40dp"
            android:layout_below="@+id/textView24"
            android:layout_alignParentStart="true"
            android:layout_marginStart="30dp"
            android:layout_marginTop="19dp"
            android:background="@color/white"
            android:hint="01800000000"
            android:textColor="@color/colorPrimaryDark2"
            android:textSize="19dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView12"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textEmargencyNumber_2"
            android:layout_alignParentStart="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="11dp"
            android:text="Address"
            android:textSize="18dp" />

        <TextView
            android:id="@+id/textViewAddress"
            android:layout_width="350dp"
            android:layout_height="70dp"
            android:layout_below="@+id/textView12"
            android:layout_alignParentStart="true"
            android:layout_marginStart="28dp"
            android:layout_marginTop="15dp"
            android:background="@color/white"
            android:hint="address"
            android:textColor="@color/colorPrimaryDark2"
            android:textSize="20dp" />






    </RelativeLayout>




</android.support.constraint.ConstraintLayout>
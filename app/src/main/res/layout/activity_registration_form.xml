<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Registration_form">


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="404dp"
        android:layout_height="87dp"
        android:layout_marginBottom="51dp"

        app:layout_constraintBottom_toTopOf="@+id/inputName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="26dp"
            android:text="রেজিস্ট্রেশন"
            android:textColor="@color/textcolor"
            android:textSize="40dp"
            android:textStyle="bold" />
    </RelativeLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputName"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="112dp"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputName2"
            android:layout_width="398dp"
            android:layout_height="55dp"
            android:drawableLeft="@drawable/malep"
            android:hint="  সম্পন্ন নাম"
            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textSize="20dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputEmail"
        android:layout_width="369dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="28dp"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputName">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputMobile2"
            android:layout_width="398dp"
            android:layout_height="55dp"
            android:drawableLeft="@drawable/phone"
            android:hint="  মোবাইল নাম্বার "

            android:inputType="textEmailAddress"
            android:paddingLeft="10dp"
            android:textSize="20dp" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputAge"
        android:layout_width="143dp"
        android:layout_height="57dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="18dp"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputAge2"
            android:layout_width="130dp"
            android:layout_height="60dp"
            android:drawableLeft="@drawable/age"
            android:hint="    বয়স"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="20dp" />
    </android.support.design.widget.TextInputLayout>


    <Button
        android:id="@+id/buttonDateOfBrith"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="8dp"
        android:background="@color/white"
        android:drawableRight="@drawable/down_arrow"
        android:hint="12/12/2019"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.225"
        app:layout_constraintStart_toEndOf="@+id/inputAge"
        app:layout_constraintTop_toBottomOf="@+id/inputEmail" />


    <TextView
        android:id="@+id/textView5"
        android:layout_width="88dp"
        android:layout_height="37dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="40dp"
        android:drawableLeft="@drawable/gender"
        android:text="লিঙ্গ"
        android:textColor="@color/colorPrimaryDark2"
        android:textSize="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputAge" />


    <RadioGroup
        android:id="@+id/radioGroupGrender"
        android:layout_width="184dp"
        android:layout_height="99dp"
        android:layout_marginStart="112dp"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputAge">

        <RadioButton
            android:id="@+id/radioMaleId"
            android:layout_width="117dp"
            android:layout_height="wrap_content"
            android:text="পুরুষ" />

        <RadioButton
            android:id="@+id/radioFemaleId"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="মহিলা" />

        <RadioButton
            android:id="@+id/radioOtherId"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:text="অন্যান্য" />

    </RadioGroup>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputAddress"
        android:layout_width="369dp"
        android:layout_height="60dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="128dp"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputAge">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputAddress2"
            android:layout_width="398dp"
            android:layout_height="55dp"
            android:drawableLeft="@drawable/homeaddress"
            android:hint=" সম্পন্ন ঠিকানা"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="20dp" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputBloodGroup"
        android:layout_width="381dp"
        android:layout_height="63dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="12dp"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputAddress">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputBloodGroup2"
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:drawableLeft="@drawable/blood_drop"
            android:hint="  রক্তের গ্রুপ"
            android:inputType="text"
            android:paddingLeft="10dp"
            android:textSize="20dp" />
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/password"
        android:layout_width="381dp"
        android:layout_height="63dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="8dp"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputBloodGroup">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputPassword2"
            android:layout_width="358dp"
            android:layout_height="55dp"
            android:drawableLeft="@drawable/lock"
            android:hint="     পাসওয়ার্ড"
            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="20dp" />
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="340dp"
        android:layout_height="62dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="8dp"
        android:background="@color/textcolor"
        android:drawableRight="@drawable/right_arrow"
        android:paddingEnd="90dp"
        android:textAlignment="center"
        android:text="             প্রদান করুন  "
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password" />




</android.support.constraint.ConstraintLayout>
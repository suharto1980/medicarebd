<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Blood_History">


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="389dp"
        android:layout_height="132dp"
        android:layout_marginBottom="51dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"

        app:layout_constraintVertical_bias="0.428">


        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="10dp"
            android:text="Suharto Das"

            android:textColor="@color/textcolor"
            android:textSize="35dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="17dp"
            android:layout_marginTop="52dp"
            android:text="Age:"

            android:textColor="@color/textcolor"
            android:textSize="30dp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/textViewAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="89dp"
            android:layout_marginTop="52dp"
            android:text="22"

            android:textColor="@color/textcolor"
            android:textSize="30dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/textViewBloodStatus"
            android:layout_width="170dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="225dp"
            android:layout_marginTop="57dp"
            android:layout_marginEnd="16dp"
            android:text="not Available"
            android:textColor="@color/white"
            android:textSize="20dp" />

    </RelativeLayout>


    <TextView
        android:id="@+id/view12"
        android:layout_width="217dp"
        android:layout_height="90dp"
        android:layout_marginTop="8dp"
        android:text="সর্বশেষ রক্ত প্রদানের তারিখ   :"
        android:textSize="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />


    <Button
        android:id="@+id/buttonLastDateOfDonation"
        android:layout_width="180dp"
        android:layout_height="48dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:drawableRight="@drawable/down_arrow"
        android:background="@color/white"
        android:hint="12/12/2019"
        android:textSize="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/view12"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3" />

    <TextView
        android:id="@+id/textViewBloodGroup"
        android:layout_width="330dp"
        android:layout_height="228dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="116dp"
        android:layout_marginEnd="8dp"
        android:text="AB+"
        android:textAlignment="center"
        android:textColor="@color/Red"
        android:textSize="170dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.492"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view12" />


    <Button
        android:id="@+id/buttonSignUp"
        android:layout_width="376dp"
        android:layout_height="54dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="64dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="64dp"
        android:background="@drawable/buttonshape"
        android:backgroundTint="@color/textcolor"
        android:text="SUBMIT"
        android:textColor="@color/white"
        android:textSize="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewBloodGroup"
        app:layout_constraintVertical_bias="0.013" />





</android.support.constraint.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Login">


    <RelativeLayout
        android:id="@+id/relativeLayout3"
        android:layout_width="409dp"
        android:layout_height="115dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <TextView
            android:id="@+id/textView8"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="27dp"
            android:layout_marginTop="38dp"

            android:layout_marginEnd="203dp"
            android:text="সাইন ইন"
            android:textColor="@color/textcolor"
            android:textSize="40dp"
            android:textStyle="bold" />
    </RelativeLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputMobile"
        android:layout_width="369dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="50dp"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/relativeLayout3">

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputMobile2"
            android:layout_width="358dp"
            android:layout_height="55dp"
            android:hint=" মোবাইল নাম্বার "
            android:inputType="textEmailAddress"
            android:paddingLeft="0dp"
            android:textSize="20dp" />
    </android.support.design.widget.TextInputLayout>


    <android.support.design.widget.TextInputLayout
        android:id="@+id/inputPassword"
        android:layout_width="369dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="8dp"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputMobile"
       app:passwordToggleEnabled="true"
        >

        <android.support.design.widget.TextInputEditText
            android:id="@+id/inputPassword2"
            android:layout_width="358dp"
            android:layout_height="55dp"
            android:hint="পাসওয়ার্ড"

            android:inputType="textPassword"
            android:paddingLeft="10dp"
            android:textSize="20dp" />
    </android.support.design.widget.TextInputLayout>


    <ImageButton
        android:id="@+id/buttonSignIn"
        android:layout_width="376dp"
        android:layout_height="54dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="88dp"
        android:background="@color/actoinbar3"
        android:text="Button"

        android:textColor="@color/white"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/inputPassword"
        app:srcCompat="@drawable/right_arrow" />


    <TextView
        android:id="@+id/textNewAccount"
        android:layout_width="363dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="20dp"
        android:text=" নতুন অ্যাকাউন্ট খুলুন "
        android:textAlignment="center"
        android:textSize="20dp"
        android:textStyle="bold"
        android:textColor="@color/textcolor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSignIn" />

    <TextView
        android:id="@+id/textForgetpassword"
        android:layout_width="363dp"
        android:layout_height="48dp"
        android:layout_marginStart="24dp"
        android:text="পাসওয়ার্ড ভুলে গেছেন?"
        android:textAlignment="center"
        android:textSize="20dp"
        android:textColor="@color/textcolor"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textNewAccount" />




</android.support.constraint.ConstraintLayout>
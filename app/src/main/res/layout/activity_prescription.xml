<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Prescription">

    <Button
        android:layout_width="169dp"
        android:layout_height="159dp"
        android:layout_marginStart="28dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_crircle"
        android:backgroundTint="@color/cardview_dark_background"
        android:fontFamily="@font/amar_bangla"
        android:text=" পূর্বের "

        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintEnd_toStartOf="@+id/buttonCurrent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <Button
        android:id="@+id/buttonCurrent"
        android:layout_width="159dp"
        android:layout_height="159dp"
        android:layout_marginStart="188dp"
        android:layout_marginTop="250dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button_crircle"
        android:backgroundTint="@color/actionbar2"
        android:fontFamily="@font/amar_bangla"

        android:text="বর্তমান"
        android:textColor="@color/white"
        android:textSize="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/buttonnewPrescriptionAdd"
        android:layout_width="356dp"
        android:layout_height="52dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="132dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/button"
        android:fontFamily="@font/amar_bangla"
        android:text="নতুন উপদেশ রেজিস্ট্রেশন "
        android:textAlignment="center"

        android:textSize="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonCurrent" />



</android.support.constraint.ConstraintLayout>